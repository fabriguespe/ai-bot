{
  "name": "bubbles-bot",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w & sleep 1 && nodemon --quiet dist/index.js",
    "dev:bun": "tsc -w & sleep 1 && bun run --watch dist/index.js",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@xmtp/message-kit": "1.0.0-beta.4",
    "node-cron": "^3.0.3",
    "openai": "^4.63.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/node": "^20.14.2",
    "@types/node-cron": "^3.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20"
  }
}
